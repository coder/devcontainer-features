{
    "name": "code-server",
    "id": "code-server",
    "version": "1.0.0",
    "description": "VS Code in the browser",
    "options": {
        "version": {
            "type": "string",
            "default": ""
        },
        "host": {
            "type": "string",
            "default": "127.0.0.1"
        },
        "port": {
            "type": "string",
            "default": "8080"
        },
        "args": {
            "type": "string",
            "default": ""
        },
        "extensions": {
            "type": "string",
            "default": ""
        },
        "workspace": {
             "type": "string",
             "default": ""
         }
    },
    "entrypoint": "/usr/local/bin/code-server-entrypoint",
    "dependsOn": {
        "ghcr.io/devcontainers/features/common-utils:2": {}
    }
}
